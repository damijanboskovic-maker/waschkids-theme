<script>
  // 3D Tilt Effekt
  document.querySelectorAll('.comic-frame').forEach(frame => {
    frame.addEventListener('mousemove', e => {
      const rect = frame.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      const centerX = rect.width / 2;
      const centerY = rect.height / 2;
      const rotateX = ((y - centerY) / centerY) * -10;
      const rotateY = ((x - centerX) / centerX) * 10;
      frame.style.setProperty('--tiltX', `${rotateX}deg`);
      frame.style.setProperty('--tiltY', `${rotateY}deg`);
    });
    frame.addEventListener('mouseleave', () => {
      frame.style.setProperty('--tiltX', `0deg`);
      frame.style.setProperty('--tiltY', `0deg`);
    });
  });
</script>

