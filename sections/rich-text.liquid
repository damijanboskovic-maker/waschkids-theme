{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  {% render 'section-padding' %}
  {% render 'section-margin' %}

  .rich-text {
  	text-align: center;
  }

  /* Custom Effekte für die Texte */
  .wg-headline {
    display: inline-block;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: .2px;
    font-size: clamp(22px, 3.2vw, 34px);
    background: linear-gradient(90deg, #0ea5e9, #22c55e, #f59e0b);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    filter: drop-shadow(0 1px 0 rgba(0,0,0,.12));
    position: relative;
    isolation: isolate;
  }
  
  .wg-headline::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(120deg, transparent 0%, rgba(255,255,255,.7) 30%, transparent 60%);
    mix-blend-mode: screen;
    transform: translateX(-160%);
    animation: wg-shine 3.6s linear infinite;
    pointer-events: none;
    z-index: -1;
  }
  
  @keyframes wg-shine {
    to { transform: translateX(160%); }
  }

  .wg-subline {
    margin-top: 10px;
    font-family: 'Montserrat', sans-serif !important;
    font-weight: 600 !important;
    font-size: clamp(16px, 2vw, 20px) !important;
    letter-spacing: 0.3px !important;
    color: #374151 !important;
    opacity: 0;
    line-height: 1.6;
    animation: wg-fadeUp .85s ease-out .15s forwards;
  }
  
  @keyframes wg-fadeUp {
    from { transform: translateY(6px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  /* Optionaler Hover-Glow auf großen Displays */
  @media (hover: hover) {
    .wg-headline:hover {
      filter: drop-shadow(0 0 10px rgba(14,165,233,.45)) drop-shadow(0 0 18px rgba(14,165,233,.25));
    }
  }
{%- endstyle -%}

<div class="rich-text{% if section.settings.full_width %} rich-text--full-width{% endif %} color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="rich-text__blocks">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'subheading' -%}
          <div
            class="rich-text__subheading subtitle"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.subheading | escape }}
          </div>
        {%- when 'heading' -%}
          <h2
            class="title--section {% if block.settings.heading_size == 'medium' %}h2{% else %}h1{% endif %} wg-headline"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.heading }}
          </h2>
        {%- when 'text' -%}
          <div class="rich-text__text wg-subline" {{ block.shopify_attributes }}>
            {{ block.settings.text }}
          </div>
        {%- when 'button' -%}
          <a
            {% if block.settings.button_link == blank %}
              aria-disabled="true"
            {% else %}
              href="{{ block.settings.button_link }}"
            {% endif %}
            class="button button--arrow button--{{- block.settings.button_style -}}"
            {{ block.shopify_attributes }}
          >
            <span>
              {{ block.settings.button_label | escape }}
            </span>
            <span>
              {%- render 'icon-button-arrow' -%}
            </span>
          </a>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

